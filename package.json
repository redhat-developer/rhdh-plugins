{
  "name": "@redhat-developer/rhdh-plugins",
  "private": true,
  "version": "0.0.0",
  "repository": "git@github.com:redhat-developer/rhdh-plugins.git",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "create-workspace": "rhdh-repo-tools workspace create",
    "postinstall": "husky",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "i18n:generate": "bash scripts/i18n-scripts/generate-json.sh",
    "i18n:upload": "bash scripts/i18n-scripts/i18n-upload.sh",
    "i18n:download": "bash scripts/i18n-scripts/i18n-download-direct.sh",
    "i18n:deploy": "bash scripts/i18n-scripts/deploy-translations.sh",
    "i18n:status": "bash scripts/i18n-scripts/status.sh",
    "i18n:clean": "bash scripts/i18n-scripts/clean.sh",
    "i18n-cleanup": "bash scripts/i18n-scripts/cleanup-backups.sh",
    "i18n-cleanup:help": "bash scripts/i18n-scripts/cleanup-backups.sh --help"
  },
  "type": "module",
  "packageManager": "yarn@3.8.7",
  "devDependencies": {
    "@backstage/cli": "^0.27.0",
    "@backstage/cli-node": "^0.2.2",
    "@backstage/types": "^1.2.1",
    "@changesets/parse": "^0.4.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@manypkg/get-packages": "^2.2.2",
    "@octokit/rest": "^20.1.1",
    "@red-hat-developer-hub/rhdh-repo-tools": "portal:./workspaces/repo-tools/packages/cli",
    "@spotify/eslint-plugin": "^15.0.0",
    "@spotify/prettier-config": "^15.0.0",
    "array-to-table": "^1.0.1",
    "eslint": "^8.6.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-testing-library": "^6.0.0",
    "fs-extra": "11.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "lodash.escaperegexp": "^4.1.2",
    "node-fetch": "^2.6.7",
    "prettier": "^3.4.2",
    "semver": "^7.7.2",
    "typescript": "^5.9.2"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
